{
  "title": "Shift + Alt language switch",
  "rules": [
    {
      "description": "Shift + Alt to switch input method",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["left_alt"]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["left_alt"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f13",
              "modifiers": ["left_alt", "left_shift"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_alt",
            "modifiers": {
              "mandatory": ["left_shift"]
            }
          },
          "to": [
            {
              "key_code": "left_alt",
              "modifiers": ["left_shift"]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "f13",
              "modifiers": ["left_alt", "left_shift"]
            }
          ]
        }
      ]
    }
  ]
}
